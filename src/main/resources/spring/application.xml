<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
    <!-- DataSource Bean -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:file:database.dat;shutdown=true"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>


    <!-- JDBCTemplate Bean -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- DAO Beans -->
    <bean id="customerDao" class="com.akash.spring.crm.dao.impl.CustomerDAOImpl" init-method="createTable">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>
    <bean id="actionDao" class="com.akash.spring.crm.dao.impl.ActionDAOImpl" init-method="createTable">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <!-- Service Beans -->
    <bean id="customerService" class="com.akash.spring.crm.services.customer.impl.CustomerServiceImpl">
        <constructor-arg ref="customerDao"/>
    </bean>
    <bean id="actionService" class="com.akash.spring.crm.services.diary.impl.ActionServiceImpl">
        <constructor-arg ref="actionDao"/>
    </bean>
    <bean id="callService" class="com.akash.spring.crm.services.calls.impl.CallServiceImpl">
        <constructor-arg ref="customerService"/>
        <constructor-arg ref="actionService"/>
    </bean>
</beans>